<div class="modal fade" id="loginModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-login" role="document">
      <div class="modal-content">
        <div class="card card-signup card-plain">
          <div class="modal-header">
            <div class="card-header card-header-primary text-center">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="material-icons">clear</i></button>
              <h4 class="card-title">Log in</h4>
              <div class="social-line">
                <% link_to user_facebook_omniauth_authorize_path, class: "btn btn-just-icon btn-facebook" do %>
                  <i class="fa fa-facebook-square"></i>
                <% end %>
                <%= link_to user_twitter_omniauth_authorize_path, class: "btn btn-just-icon btn-twitter" do %>
                    <i class="fa fa-twitter"></i>
                <% end %>
                <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-just-icon btn-google" do %>
                  <i class="fa fa-google-plus"></i>
                <% end %>
              </div>
            </div>
          </div>
          <%= form_for(User.new, url: user_session_path, method: :post) do |f| %>
            <div class="modal-body">
                <p class="description text-center">Or Be Classical</p>
                <div class="card-body">
                  <div class="form-group bmd-form-group">
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text">
                          <i class="material-icons">mail</i>
                        </span>
                      </div>
                      <%= f.text_field :email, placeholder:"Email", autofocus: true, required: true, class:"form-control" %>
                    </div>
                  </div>
                  <div class="form-group bmd-form-group">
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text">
                          <i class="material-icons">lock_outline</i>
                        </span>
                      </div>
                      <%= f.password_field :password, placeholder:"Password", class:"form-control", required: true%>
                    </div>
                  </div>
                </div>
            </div>
            <div class="modal-footer justify-content-center">
              <%= f.submit "Log in", class:"btn btn-primary btn-wd btn-link btn-lg btn-signin"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
